<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnitDetails" >

    <!--
    This title strip will display the currently visible page title, as well as the page  
    titles for adjacent pages.  
    -->

    <android.support.v4.view.PagerTitleStrip
        android:id="@+id/pager_title_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/tab_title_background"
        android:paddingBottom="@dimen/tab_title_padding_bottom"
        android:paddingTop="@dimen/tab_title_padding_top"
        android:textColor="@color/tab_title_text_color" />

</android.support.v4.view.ViewPager>